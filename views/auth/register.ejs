<%- include('../includes/head.ejs') %>
   <%- include('../includes/navigation.ejs') %>

   <div class="container">
         <div class="form-container">
            <form class="form" action="/register" method="POST" novalidate>
               <div class="form-header util-centered">
                  <h1>Register</h1>
               </div>
               <% if(errorMessage) { %>
                  <div class="user-message user-message--error">
                     <%= errorMessage %>
                  </div>
               <% } %>
               <div class="form-group">
                  <label for="firstName">First name</label>
                  <input 
                     autocomplete="off"
                     class="<%= validationErrors.find(error => error.param === 'firstName') ? 'invalid' : '' %> form-control"
                     type="text" 
                     placeholder="First Name" 
                     name="firstName" 
                     id="firstName" 
                     value="<%= oldInput.firstName %>">
               </div>
               <div class="form-group">
                  <label  for="=lastName">Last name</label>
                  <input
                     autocomplete="off"
                     class="<%= validationErrors.find(error => error.param === 'lastName') ? 'invalid' : '' %> form-control"
                     type="text" 
                     placeholder="Last Name" 
                     name="lastName" 
                     id="lastName" 
                     value="<%= oldInput.lastName %>">
               </div>
               <div class="form-group">
                  <label for="email">Email</label>
                  <input 
                     autocomplete="off"
                     class="<%= validationErrors.find(error => error.param === 'email') ? 'invalid' : '' %> form-control"
                     type="email" 
                     placeholder="Email" 
                     name="email" 
                     id="email" 
                     value="<%= oldInput.email %>">
               </div>
               <div class="form-group">
                  <label for="password">Password</label>
                  <input 
                     autocomplete="off"
                     class="<%= validationErrors.find(error => error.param === 'password') ? 'invalid' : '' %> form-control"
                     type="password" 
                     placeholder="Password" 
                     name="password" 
                     id="password" 
                     value="<%= oldInput.password %>">
               </div>
               <div class="form-group">
                  <label for="confirmPassword">Confirm Password</label>
                  <input 
                     autocomplete="off"
                     class="<%= validationErrors.find(error => error.param === 'confirmPassword') ? 'invalid' : '' %> form-control"
                     type="password" 
                     placeholder="Confirm password" 
                     name="confirmPassword" 
                     id="confirmPassword" 
                     value="<%= oldInput.confirmPassword %>">
               </div>
               <input type="hidden" name="_csrf" value="<%= csrfToken %>">
               <button class="btn btn-primary" type="submit">Submit</button>
          </form>
         </div>
   </div>
    
<%- include('../includes/footer.ejs') %>