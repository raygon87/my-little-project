<%- include('../includes/head.ejs') %>
   <%- include('../includes/navigation.ejs') %>
   <div class="container">
      <div class="util-margin-top util-centered">
         <h1>My Products</h1>
      </div>
      <div class="cards-container">
         <% if(products.length > 0) { %>
            <% for (product of products) { %>
               <div class="card-container">
                  <div class="card__details editAndDeleteBtn">
                     <a href="/user/edit-product/<%= product.id %>" class="btn btn-warning edit-btn">Edit</a>
                     <form action="/user/delete-product" method="POST">
                        <input type="hidden" name="productId" value="<%= product.id %>">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button class="btn btn-danger" type="submit">Delete</button>
                     </form>
                  </div>
                  <div class="card">
                     <div class="card__img-box">
                        <img src="/<%= product.image %>" class="card__img" alt="<%= product.title %>">
                     </div>
                     <div class="card-body">
                        <div class="card__title">
                           <h3><%= product.title %></h3>
                        </div>
                        <div class="card__description">
                           <p><%= product.description %></p>
                        </div>
                        <div class="card__price">
                           <p>Price: $<%= product.price %></p>
                        </div>
                     </div>
                  </div>  
               </div>
            <% } %>
         <% } else { %> 
            <h1>No product find</h1>
         <% } %>
      </div>
   </div>
<%- include('../includes/footer.ejs') %>